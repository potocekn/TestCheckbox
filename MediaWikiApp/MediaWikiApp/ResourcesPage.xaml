<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBase.ResourcesPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="PDFs" Command="{Binding GoToPDFs}" IsVisible="{Binding IsPDFSelected}" BackgroundColor="GhostWhite"/>
            <Button Text="HTMLs" Command="{Binding GoToHTMLs}" IsVisible="{Binding IsHTMLSelected}" BackgroundColor="GhostWhite"/>
            <Button Text="ODTs" Command="{Binding GoToODTs}" IsVisible="{Binding IsODTSelected}" BackgroundColor="GhostWhite"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>