<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestCheckbox.CheckPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BindableLayout.ItemsSource="{Binding Items}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsChecked}" CheckedChanged="OnCheckBoxCheckedChanged" Margin="20" VerticalOptions="CenterAndExpand" Color="DarkCyan"/>
                            <Label Text="{Binding Value}" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <Button Text="Save" Command="{Binding ChangingCheckBox}"/>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>