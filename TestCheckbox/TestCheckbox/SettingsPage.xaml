<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:AppBase.Resources"
             x:Class="AppBase.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="{x:Static resources:AppResources.LanguageChangeLabel_Text}" Command="{Binding GoToLanguageSettings}" BackgroundColor="GhostWhite" />
            <Button Text="{x:Static resources:AppResources.UpdateIntervalSettingsLabel_Text}" Command="{Binding GoToUpdateIntervalSettings}" BackgroundColor="GhostWhite"/>
            <Button x:Name="FormatButton" Text="{x:Static resources:AppResources.FormatButton_Text}" Command="{Binding GoToResourceFormatSettings}" BackgroundColor="GhostWhite"/>
            <Button x:Name="LocationButton" IsVisible="true" Text="File Location Settings" Command="{Binding GoToFileLocationSettings}" BackgroundColor="GhostWhite"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>