<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBase.FirstRunDownloadResourcesPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Downloading selected resources! Please make sure you have connection to the Internet and hit the download button."
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   Margin="50, 10,0,0" 
                   FontSize="20"   />
            <Button Text="Download" Clicked="OnButtonClicked"  HorizontalOptions="Center" Margin="0,0,0, 200"
                    WidthRequest="200" HeightRequest="50" BackgroundColor="#2196F3" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>